#!/bin/bash

set -e
set -u

outfile="${1}"
version="${2}"

set +e
sha="$(git describe 2> /dev/null)"
set -e


cat > "${outfile}" << EOF
#ifndef _PUD_VERSION_H_
#define _PUD_VERSION_H_

#define PLUGIN_VER "${version}"
EOF

if [[ -z "${sha:-}" ]]; then
  sha="OLSRD_Unknown-g0000000"
fi

cat >> "${outfile}" << EOF
#define GIT_SHA    "${sha}"
EOF

cat >> "${outfile}" << EOF

#endif /* _PUD_VERSION_H_ */
EOF
